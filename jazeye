#include<stdio.h>
#include<conio.h>

int main()
{
	int a,n,k,i,sum=0,x,rev[20];
	printf("\n enter the numbers \t");
	scanf("%d",&n);
	x=n, k=0;
	while(x>0)
	{
		a=x%10;
		sum=sum+a;
		rev[k]=a;
		x=x/10;
		k++;
	}
	printf("\n\t sum of the digits of %d = %d ",n,sum);
	printf("\n\n\t revers of %d =",n);
	for(i=0;i<k;i++)
	{
		printf("%d",rev[i]);
		
	}
	getch();
}
